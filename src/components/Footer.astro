---
/* Footer — Minimal elegant footer */
const year = new Date().getFullYear();
---

<footer class="footer">
    <div class="footer__top">
        <div class="footer__inner container">
            <div class="footer__brand">
                <a href="/" class="footer__logo">
                    <img
                        src="/imgs/logocirculo.png"
                        alt="Dejavu Estudios Logo"
                        class="footer__logo-img"
                    />
                    <span class="footer__logo-text"
                        >Dejavu <span class="gold-gradient-text">Estudios</span
                        ></span
                    >
                </a>
                <p class="footer__tagline">
                    Tu belleza. Tu poder. Tus ingresos.
                </p>
            </div>

            <div class="footer__links">
                <div class="footer__col">
                    <h4 class="footer__col-title">Navegación</h4>
                    <ul class="footer__list">
                        <li><a href="#inicio">Inicio</a></li>
                        <li><a href="#servicios">Servicios</a></li>
                        <li><a href="#contacto">Contacto</a></li>
                    </ul>
                </div>
                <div class="footer__col">
                    <h4 class="footer__col-title">Síguenos</h4>
                    <ul class="footer__list">
                        <li>
                            <a href="https://www.facebook.com/profile.php?id=61587942637252" target="_blank" rel="noopener"
                                >Facebook</a
                            >
                        </li>
                        <li>
                            <a href="https://www.tiktok.com/@dejavuestudios_" target="_blank" rel="noopener">TikTok</a
                            >
                        </li>
                        <!-- <li>
                            <a href="#" target="_blank" rel="noopener"
                                >Telegram</a
                            >
                        </li> -->
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="footer__bottom">
        <div class="footer__inner container">
            <p class="footer__copy">
                &copy; {year} Dejavu Estudios. Todos los derechos reservados.
            </p>
            <p class="footer__legal">Privacidad · Términos</p>
        </div>
    </div>
</footer>

<style>
    .footer {
        position: relative;
        border-top: 1px solid rgba(212, 175, 55, 0.1);
    }

    .footer__top {
        padding: 4rem 0 3rem;
    }

    .footer__inner {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 3rem;
        flex-wrap: wrap;
    }

    /* Brand */
    .footer__logo {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-family: var(--font-display);
        font-size: 1.2rem;
        font-weight: 600;
        color: var(--white);
        margin-bottom: 0.75rem;
    }

    .footer__logo-img {
        height: 40px;
        width: auto;
        border-radius: 50%;
        filter: drop-shadow(0 0 6px rgba(212, 175, 55, 0.3));
    }

    .footer__tagline {
        font-size: 0.82rem;
        color: var(--silver-400);
        font-weight: 300;
        letter-spacing: 0.03em;
    }

    /* Links */
    .footer__links {
        display: flex;
        gap: 4rem;
    }

    .footer__col-title {
        font-family: var(--font-display);
        font-size: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: var(--gold-400);
        margin-bottom: 1rem;
    }

    .footer__list {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
    }

    .footer__list a {
        font-size: 0.85rem;
        color: var(--silver-300);
        font-weight: 300;
        transition: color var(--transition-base);
    }

    .footer__list a:hover {
        color: var(--gold-300);
    }

    /* Bottom */
    .footer__bottom {
        padding: 1.5rem 0;
        border-top: 1px solid rgba(255, 255, 255, 0.06);
    }

    .footer__bottom .footer__inner {
        align-items: center;
    }

    .footer__copy,
    .footer__legal {
        font-size: 0.72rem;
        color: var(--silver-500);
        font-weight: 300;
        letter-spacing: 0.05em;
    }

    .footer__legal {
        color: var(--silver-400);
    }

    /* Responsive */
    @media (max-width: 640px) {
        .footer__inner {
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .footer__links {
            gap: 2.5rem;
        }

        .footer__bottom .footer__inner {
            gap: 0.5rem;
        }
    }
</style>
