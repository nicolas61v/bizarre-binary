---
/* Hero — Split layout with image, enhanced animations, gold particles */
import { createReader } from "@keystatic/core/reader";
import keystaticConfig from "../../keystatic.config";

const reader = createReader(process.cwd(), keystaticConfig);
const heroContent = await reader.singletons.hero.read();

const defaultImage =
    "https://images.unsplash.com/photo-1534528741775-53994a69daeb?w=600&h=800&fit=crop&crop=face";
const heroImage = heroContent?.image ? heroContent.image : defaultImage;
const heroSubtitle = heroContent?.subtitle || "Dejavu Estudios";
const heroTagline = heroContent?.tagline || "Studio de Modelaje Webcam";
const heroTitle = heroContent?.title || "Tu Belleza, Tu Poder";
---

<section class="hero" id="inicio">
    <!-- CSS Bokeh Background -->
    <div class="hero__bg">
        <div class="hero__bg-gradient"></div>
        <div class="hero__bokeh hero__bokeh--1"></div>
        <div class="hero__bokeh hero__bokeh--2"></div>
        <div class="hero__bokeh hero__bokeh--3"></div>
        <div class="hero__bokeh hero__bokeh--4"></div>
        <div class="hero__bokeh hero__bokeh--5"></div>
    </div>

    <!-- Animated Gold Particles -->
    <div class="hero__particles" aria-hidden="true">
        <span class="particle particle--1"></span>
        <span class="particle particle--2"></span>
        <span class="particle particle--3"></span>
        <span class="particle particle--4"></span>
        <span class="particle particle--5"></span>
        <span class="particle particle--6"></span>
        <span class="particle particle--7"></span>
        <span class="particle particle--8"></span>
        <span class="particle particle--9"></span>
        <span class="particle particle--10"></span>
        <span class="particle particle--11"></span>
        <span class="particle particle--12"></span>
    </div>

    <!-- Content -->
    <div class="hero__content container">
        <!-- Left: Text -->
        <div class="hero__text">
            <div class="hero__card-line"></div>

            <p class="hero__subtitle">{heroSubtitle}</p>

            <h1 class="hero__title">
                {heroTitle}
            </h1>

            <p class="hero__tagline">{heroTagline}</p>

            <p class="hero__description">
                Maximiza tus ingresos con el respaldo de un equipo profesional.
                Estrategia, herramientas y acompañamiento para que ganes más.
            </p>

            <div class="hero__actions">
                <a href="#contacto" class="hero__btn hero__btn--primary">
                    <span>Empieza a Ganar</span>
                    <svg
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <path d="M5 12h14M12 5l7 7-7 7"></path>
                    </svg>
                </a>
                <a href="#servicios" class="hero__btn hero__btn--secondary">
                    Conoce Más
                </a>
            </div>
        </div>

        <!-- Right: Image -->
        <div class="hero__image-wrap">
            <div class="hero__image-frame">
                <!-- CAMBIAR ESTA RUTA POR TU IMAGEN REAL -->
                <img
                    src={heroImage}
                    alt={heroTitle}
                    class="hero__image"
                    loading="eager"
                />
                <div class="hero__image-overlay"></div>
                <div class="hero__image-border"></div>
            </div>
            <!-- Floating accent elements -->
            <div class="hero__float hero__float--1">✦</div>
            <div class="hero__float hero__float--2"></div>
        </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="hero__scroll" aria-hidden="true">
        <span class="hero__scroll-text">Scroll</span>
        <div class="hero__scroll-line">
            <div class="hero__scroll-dot"></div>
        </div>
    </div>
</section>

<style>
    /* ═══════════════════════════════════════════
     HERO SECTION
  ═══════════════════════════════════════════ */
    .hero {
        position: relative;
        width: 100%;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    /* ─── Background ─── */
    .hero__bg {
        position: absolute;
        inset: 0;
        z-index: 0;
    }

    .hero__bg-gradient {
        position: absolute;
        inset: 0;
        background:
            radial-gradient(
                ellipse 80% 60% at 50% 40%,
                rgba(212, 175, 55, 0.06) 0%,
                transparent 70%
            ),
            radial-gradient(
                ellipse 50% 40% at 85% 20%,
                rgba(212, 175, 55, 0.04) 0%,
                transparent 50%
            ),
            linear-gradient(180deg, #0a0a0a 0%, #0f0f0f 40%, #0a0a0a 100%);
    }

    /* Bokeh circles */
    .hero__bokeh {
        position: absolute;
        border-radius: 50%;
        filter: blur(70px);
        opacity: 0;
        animation: bokehPulse 10s ease-in-out infinite;
    }

    .hero__bokeh--1 {
        width: 350px;
        height: 350px;
        top: 10%;
        left: 10%;
        background: radial-gradient(
            circle,
            rgba(212, 175, 55, 0.12),
            transparent 70%
        );
        animation-delay: 0s;
    }
    .hero__bokeh--2 {
        width: 250px;
        height: 250px;
        top: 55%;
        right: 5%;
        background: radial-gradient(
            circle,
            rgba(212, 175, 55, 0.08),
            transparent 70%
        );
        animation-delay: 2.5s;
    }
    .hero__bokeh--3 {
        width: 200px;
        height: 200px;
        bottom: 15%;
        left: 35%;
        background: radial-gradient(
            circle,
            rgba(212, 175, 55, 0.08),
            transparent 70%
        );
        animation-delay: 5s;
    }
    .hero__bokeh--4 {
        width: 280px;
        height: 280px;
        top: 25%;
        right: 25%;
        background: radial-gradient(
            circle,
            rgba(255, 255, 255, 0.03),
            transparent 70%
        );
        animation-delay: 3.5s;
    }
    .hero__bokeh--5 {
        width: 180px;
        height: 180px;
        bottom: 30%;
        right: 15%;
        background: radial-gradient(
            circle,
            rgba(212, 175, 55, 0.06),
            transparent 70%
        );
        animation-delay: 7s;
    }

    @keyframes bokehPulse {
        0%,
        100% {
            opacity: 0.25;
            transform: scale(1) translate(0, 0);
        }
        25% {
            opacity: 0.5;
            transform: scale(1.1) translate(5px, -5px);
        }
        50% {
            opacity: 0.6;
            transform: scale(1.18) translate(-3px, 8px);
        }
        75% {
            opacity: 0.4;
            transform: scale(1.05) translate(4px, 3px);
        }
    }

    /* ─── Particles ─── */
    .hero__particles {
        position: absolute;
        inset: 0;
        z-index: 1;
        pointer-events: none;
    }

    .particle {
        position: absolute;
        border-radius: 50%;
        opacity: 0;
        animation: particleFloat linear infinite;
    }

    .particle--1 {
        left: 8%;
        bottom: -5%;
        animation-duration: 14s;
        animation-delay: 0s;
        width: 2px;
        height: 2px;
        background: var(--gold-300);
    }
    .particle--2 {
        left: 20%;
        bottom: -5%;
        animation-duration: 18s;
        animation-delay: 2s;
        width: 3px;
        height: 3px;
        background: var(--gold-300);
    }
    .particle--3 {
        left: 32%;
        bottom: -5%;
        animation-duration: 12s;
        animation-delay: 4s;
        width: 2px;
        height: 2px;
        background: var(--silver-200);
    }
    .particle--4 {
        left: 44%;
        bottom: -5%;
        animation-duration: 16s;
        animation-delay: 1s;
        width: 3px;
        height: 3px;
        background: var(--gold-300);
    }
    .particle--5 {
        left: 55%;
        bottom: -5%;
        animation-duration: 13s;
        animation-delay: 3s;
        width: 2px;
        height: 2px;
        background: var(--silver-200);
    }
    .particle--6 {
        left: 66%;
        bottom: -5%;
        animation-duration: 15s;
        animation-delay: 5.5s;
        width: 3px;
        height: 3px;
        background: var(--gold-300);
    }
    .particle--7 {
        left: 77%;
        bottom: -5%;
        animation-duration: 17s;
        animation-delay: 1.5s;
        width: 2px;
        height: 2px;
        background: var(--gold-300);
    }
    .particle--8 {
        left: 88%;
        bottom: -5%;
        animation-duration: 14s;
        animation-delay: 4.5s;
        width: 3px;
        height: 3px;
        background: var(--silver-200);
    }
    .particle--9 {
        left: 15%;
        bottom: -5%;
        animation-duration: 16s;
        animation-delay: 6s;
        width: 2px;
        height: 2px;
        background: var(--gold-300);
    }
    .particle--10 {
        left: 50%;
        bottom: -5%;
        animation-duration: 13s;
        animation-delay: 7s;
        width: 4px;
        height: 4px;
        background: var(--gold-300);
    }
    .particle--11 {
        left: 72%;
        bottom: -5%;
        animation-duration: 19s;
        animation-delay: 2.5s;
        width: 2px;
        height: 2px;
        background: var(--silver-200);
    }
    .particle--12 {
        left: 38%;
        bottom: -5%;
        animation-duration: 15s;
        animation-delay: 8s;
        width: 2px;
        height: 2px;
        background: var(--gold-300);
    }

    @keyframes particleFloat {
        0% {
            transform: translateY(0) translateX(0) scale(1);
            opacity: 0;
        }
        8% {
            opacity: 0.9;
        }
        30% {
            transform: translateY(-30vh) translateX(15px) scale(0.8);
            opacity: 0.5;
        }
        60% {
            transform: translateY(-65vh) translateX(-10px) scale(1.1);
            opacity: 0.7;
        }
        100% {
            transform: translateY(-115vh) translateX(20px) scale(0.6);
            opacity: 0;
        }
    }

    /* ─── Content (Split Layout) ─── */
    .hero__content {
        position: relative;
        z-index: 2;
        display: grid;
        grid-template-columns: 1fr 1fr; /* 50% 50% split */
        align-items: center; /* Vertically center */
        gap: 4rem; /* Increased gap for better separation */
        padding-top: 120px; /* More breathing room from top */
        padding-bottom: 80px;
        min-height: 100vh;
        max-width: 1200px; /* Contain content width */
        margin: 0 auto;
    }

    /* ─── Text Side ─── */
    .hero__text {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start; /* Left align explicitly */
        padding-right: 2rem; /* Spacing from image */
    }

    .hero__card-line {
        width: 60px; /* Slightly longer */
        height: 2px; /* Slightly thicker */
        margin-bottom: 2.5rem;
        background: linear-gradient(
            90deg,
            var(--gold-300),
            transparent
        ); /* Gold to transparent */
        animation: lineSlideIn 1.5s var(--ease-out-expo) both;
        animation-delay: 0.2s;
    }

    @keyframes lineSlideIn {
        from {
            opacity: 0;
            width: 0;
        }
        to {
            opacity: 1;
            width: 60px;
        }
    }

    .hero__subtitle {
        font-family: var(--font-body);
        font-size: 0.85rem; /* Larger for readability */
        font-weight: 500;
        letter-spacing: 0.35em;
        text-transform: uppercase;
        color: var(--gold-300); /* Use new metallic gold */
        margin-bottom: 1.5rem;
        animation: fadeSlideRight 1.2s var(--ease-out-expo) both;
        animation-delay: 0.4s;
    }

    @keyframes fadeSlideRight {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .hero__title {
        font-family: var(--font-display);
        font-size: clamp(3rem, 5vw, 4.5rem); /* Larger title */
        font-weight: 700;
        line-height: 1.1;
        color: var(--white);
        margin-bottom: 1.5rem;
    }

    .hero__title-line {
        display: block;
        overflow: hidden;
    }

    .hero__title-line {
        animation: titleReveal 1s var(--ease-out-expo) both;
        animation-delay: 0.6s;
    }

    .hero__title-line--delay {
        animation-delay: 0.8s;
    }

    .hero__title-accent {
        background: linear-gradient(
            135deg,
            var(--gold-200) 0%,
            var(--gold-300) 50%,
            var(--gold-500) 100%
        ); /* Richer gradient */
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    @keyframes titleReveal {
        from {
            opacity: 0;
            transform: translateY(100%);
            filter: blur(4px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
            filter: blur(0);
        }
    }

    .hero__tagline {
        font-family: var(--font-body);
        font-size: 1rem;
        font-weight: 300;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: var(--silver-200);
        margin-bottom: 2rem;
        padding-left: 2px; /* Alignment tweak */
        border-left: 1px solid var(--gold-500); /* Subtle line */
        padding-left: 1rem;
        animation: fadeSlideUp 1.2s var(--ease-out-expo) both;
        animation-delay: 0.8s;
    }

    .hero__description {
        font-size: 1.05rem;
        color: var(--silver-100);
        max-width: 480px; /* Limit line length for readability */
        margin-bottom: 2.5rem;
        line-height: 1.7;
        font-weight: 300;
        opacity: 0.9;
        animation: fadeSlideUp 1.2s var(--ease-out-expo) both;
        animation-delay: 0.9s;
    }

    .hero__actions {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        flex-wrap: wrap;
        animation: fadeSlideUp 1.2s var(--ease-out-expo) both;
        animation-delay: 1.1s;
    }

    @keyframes fadeSlideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Buttons */
    .hero__btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.9rem 2.25rem;
        font-size: 0.78rem;
        font-weight: 600;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        border-radius: 50px;
        transition: all var(--transition-base);
    }

    .hero__btn--primary {
        color: var(--black);
        background: linear-gradient(
            135deg,
            var(--gold-300) 0%,
            var(--gold-400) 100%
        );
        box-shadow: 0 4px 20px rgba(212, 175, 55, 0.25);
    }

    .hero__btn--primary:hover {
        transform: translateY(-2px) scale(1.03);
        box-shadow: 0 10px 40px rgba(212, 175, 55, 0.4);
    }

    .hero__btn--primary svg {
        transition: transform var(--transition-base);
    }
    .hero__btn--primary:hover svg {
        transform: translateX(5px);
    }

    .hero__btn--secondary {
        color: var(--white);
        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(8px);
    }

    .hero__btn--secondary:hover {
        background: rgba(255, 255, 255, 0.12);
        border-color: rgba(255, 255, 255, 0.4);
        transform: translateY(-2px);
    }

    /* ─── Image Side ─── */
    .hero__image-wrap {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        animation: imageEnter 1.8s cubic-bezier(0.22, 1, 0.36, 1) both; /* Slower, dramatic entrance */
        animation-delay: 0.3s;
    }

    @keyframes imageEnter {
        from {
            opacity: 0;
            transform: translateX(40px) scale(0.95); /* Slide from right + scale */
            filter: blur(10px);
        }
        to {
            opacity: 1;
            transform: translateX(0) scale(1);
            filter: blur(0);
        }
    }

    .hero__image-frame {
        position: relative;
        width: clamp(300px, 90%, 480px); /* Larger image */
        aspect-ratio: 3 / 4;
        border-radius: 24px; /* Matches new style */
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5); /* Deep shadow */
    }

    .hero__image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.8s var(--ease-out-expo);
    }

    .hero__image-frame:hover .hero__image {
        transform: scale(1.05);
    }

    .hero__image-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            180deg,
            transparent 40%,
            rgba(10, 10, 10, 0.6) 100%
        );
        pointer-events: none;
    }

    .hero__image-border {
        position: absolute;
        inset: 0;
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.15);
        pointer-events: none;
        transition: border-color var(--transition-base);
    }

    .hero__image-frame:hover .hero__image-border {
        border-color: rgba(212, 175, 55, 0.35);
    }

    /* Floating decorative elements */
    .hero__float {
        position: absolute;
        z-index: 3;
        pointer-events: none;
    }

    .hero__float--1 {
        top: -10px;
        right: 5%;
        font-size: 1.2rem;
        color: var(--gold-300);
        filter: drop-shadow(0 0 10px rgba(212, 175, 55, 0.4));
        animation: floatBounce 4s ease-in-out infinite;
    }

    .hero__float--2 {
        bottom: 15%;
        left: -5%;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        border: 1px solid rgba(255, 255, 255, 0.1);
        animation: floatBounce 5s ease-in-out infinite reverse;
    }

    @keyframes floatBounce {
        0%,
        100% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(-15px) rotate(5deg);
        }
    }

    /* ─── Scroll Indicator ─── */
    .hero__scroll {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        z-index: 2;
        animation: fadeSlideUp 1s var(--ease-out-expo) both;
        animation-delay: 1.8s;
    }

    .hero__scroll-text {
        font-size: 0.6rem;
        letter-spacing: 0.25em;
        text-transform: uppercase;
        color: var(--silver-400);
    }

    .hero__scroll-line {
        width: 1px;
        height: 40px;
        background: rgba(255, 255, 255, 0.12);
        position: relative;
        overflow: hidden;
        border-radius: 1px;
    }

    .hero__scroll-dot {
        width: 3px;
        height: 10px;
        background: var(--silver-200);
        border-radius: 3px;
        position: absolute;
        left: -1px;
        animation: scrollDot 2.5s ease-in-out infinite;
    }

    @keyframes scrollDot {
        0% {
            top: -10px;
            opacity: 0;
        }
        25% {
            opacity: 1;
        }
        100% {
            top: 40px;
            opacity: 0;
        }
    }

    /* ─── Responsive ─── */
    @media (max-width: 768px) {
        .hero__content {
            grid-template-columns: 1fr;
            text-align: center;
            padding-top: 90px;
            gap: 2.5rem;
        }

        .hero__text {
            align-items: center;
            order: 2;
        }

        .hero__image-wrap {
            order: 1;
        }

        .hero__card-line {
            margin-left: auto;
            margin-right: auto;
        }

        .hero__description {
            margin-left: auto;
            margin-right: auto;
        }

        .hero__actions {
            justify-content: center;
            flex-direction: column;
        }

        .hero__btn {
            width: 100%;
            max-width: 280px;
            justify-content: center;
        }

        .hero__image-frame {
            width: clamp(220px, 65%, 320px);
        }

        .hero__scroll {
            bottom: 1rem;
        }
    }
</style>
