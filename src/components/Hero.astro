---
/* Hero — Full viewport with CSS bokeh background, gold particles, and glassmorphism card */
---

<section class="hero" id="inicio">
    <!-- CSS Bokeh Background -->
    <div class="hero__bg">
        <div class="hero__bg-gradient"></div>
        <div class="hero__bokeh hero__bokeh--1"></div>
        <div class="hero__bokeh hero__bokeh--2"></div>
        <div class="hero__bokeh hero__bokeh--3"></div>
        <div class="hero__bokeh hero__bokeh--4"></div>
        <div class="hero__bokeh hero__bokeh--5"></div>
        <div class="hero__bokeh hero__bokeh--6"></div>
        <div class="hero__bokeh hero__bokeh--7"></div>
    </div>

    <!-- Animated Gold Particles -->
    <div class="hero__particles" aria-hidden="true">
        <span class="particle particle--1"></span>
        <span class="particle particle--2"></span>
        <span class="particle particle--3"></span>
        <span class="particle particle--4"></span>
        <span class="particle particle--5"></span>
        <span class="particle particle--6"></span>
        <span class="particle particle--7"></span>
        <span class="particle particle--8"></span>
        <span class="particle particle--9"></span>
        <span class="particle particle--10"></span>
        <span class="particle particle--11"></span>
        <span class="particle particle--12"></span>
        <span class="particle particle--13"></span>
        <span class="particle particle--14"></span>
        <span class="particle particle--15"></span>
    </div>

    <!-- Content -->
    <div class="hero__content container">
        <div class="hero__card glass">
            <!-- Decorative top line -->
            <div class="hero__card-line"></div>

            <p class="hero__subtitle">— STUDIO DE MODELAJE WEBCAM —</p>

            <h1 class="hero__title">
                Eleva Tu <br />
                <span class="hero__title-accent">Presencia Digital</span>
            </h1>

            <p class="hero__description">
                Somos un estudio profesional dedicado a potenciar tu carrera en
                el modelaje webcam. Te brindamos las herramientas, el
                acompañamiento y la estrategia que necesitas para brillar con
                confianza.
            </p>

            <div class="hero__actions">
                <a href="#contacto" class="hero__btn hero__btn--primary">
                    <span>Comienza Ahora</span>
                    <svg
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <path d="M5 12h14M12 5l7 7-7 7"></path>
                    </svg>
                </a>
                <a href="#servicios" class="hero__btn hero__btn--secondary">
                    Conoce Más
                </a>
            </div>

            <!-- Decorative bottom line -->
            <div class="hero__card-line hero__card-line--bottom"></div>
        </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="hero__scroll" aria-hidden="true">
        <span class="hero__scroll-text">Scroll</span>
        <div class="hero__scroll-line">
            <div class="hero__scroll-dot"></div>
        </div>
    </div>
</section>

<style>
    /* ═══════════════════════════════════════════
     HERO SECTION
  ═══════════════════════════════════════════ */
    .hero {
        position: relative;
        width: 100%;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    /* ─── Background ─── */
    .hero__bg {
        position: absolute;
        inset: 0;
        z-index: 0;
    }

    .hero__bg-gradient {
        position: absolute;
        inset: 0;
        background:
            radial-gradient(
                ellipse 80% 60% at 50% 40%,
                rgba(212, 175, 55, 0.08) 0%,
                transparent 70%
            ),
            radial-gradient(
                ellipse 60% 50% at 20% 80%,
                rgba(212, 175, 55, 0.05) 0%,
                transparent 60%
            ),
            radial-gradient(
                ellipse 50% 40% at 85% 20%,
                rgba(255, 215, 0, 0.04) 0%,
                transparent 50%
            ),
            linear-gradient(180deg, #0a0a0a 0%, #0f0f0f 40%, #0a0a0a 100%);
    }

    /* Bokeh circles */
    .hero__bokeh {
        position: absolute;
        border-radius: 50%;
        filter: blur(60px);
        opacity: 0;
        animation: bokehPulse 8s ease-in-out infinite;
    }

    .hero__bokeh--1 {
        width: 300px;
        height: 300px;
        top: 10%;
        left: 15%;
        background: radial-gradient(
            circle,
            rgba(212, 175, 55, 0.15),
            transparent 70%
        );
        animation-delay: 0s;
    }
    .hero__bokeh--2 {
        width: 200px;
        height: 200px;
        top: 60%;
        right: 10%;
        background: radial-gradient(
            circle,
            rgba(255, 215, 0, 0.12),
            transparent 70%
        );
        animation-delay: 2s;
    }
    .hero__bokeh--3 {
        width: 250px;
        height: 250px;
        bottom: 20%;
        left: 40%;
        background: radial-gradient(
            circle,
            rgba(212, 175, 55, 0.1),
            transparent 70%
        );
        animation-delay: 4s;
    }
    .hero__bokeh--4 {
        width: 180px;
        height: 180px;
        top: 30%;
        right: 30%;
        background: radial-gradient(
            circle,
            rgba(255, 215, 0, 0.08),
            transparent 70%
        );
        animation-delay: 1s;
    }
    .hero__bokeh--5 {
        width: 350px;
        height: 350px;
        top: 50%;
        left: 5%;
        background: radial-gradient(
            circle,
            rgba(184, 150, 46, 0.06),
            transparent 70%
        );
        animation-delay: 3s;
    }
    .hero__bokeh--6 {
        width: 160px;
        height: 160px;
        top: 5%;
        right: 20%;
        background: radial-gradient(
            circle,
            rgba(255, 239, 179, 0.08),
            transparent 70%
        );
        animation-delay: 5s;
    }
    .hero__bokeh--7 {
        width: 220px;
        height: 220px;
        bottom: 10%;
        right: 25%;
        background: radial-gradient(
            circle,
            rgba(212, 175, 55, 0.1),
            transparent 70%
        );
        animation-delay: 6s;
    }

    @keyframes bokehPulse {
        0%,
        100% {
            opacity: 0.3;
            transform: scale(1);
        }
        50% {
            opacity: 0.7;
            transform: scale(1.15);
        }
    }

    /* ─── Particles ─── */
    .hero__particles {
        position: absolute;
        inset: 0;
        z-index: 1;
        pointer-events: none;
    }

    .particle {
        position: absolute;
        width: 3px;
        height: 3px;
        border-radius: 50%;
        background: var(--gold-300);
        opacity: 0;
        animation: particleFloat linear infinite;
    }

    .particle--1 {
        left: 8%;
        bottom: -5%;
        animation-duration: 12s;
        animation-delay: 0s;
        width: 2px;
        height: 2px;
    }
    .particle--2 {
        left: 18%;
        bottom: -5%;
        animation-duration: 15s;
        animation-delay: 1.5s;
        width: 3px;
        height: 3px;
    }
    .particle--3 {
        left: 28%;
        bottom: -5%;
        animation-duration: 10s;
        animation-delay: 3s;
        width: 2px;
        height: 2px;
    }
    .particle--4 {
        left: 38%;
        bottom: -5%;
        animation-duration: 14s;
        animation-delay: 0.5s;
        width: 4px;
        height: 4px;
    }
    .particle--5 {
        left: 48%;
        bottom: -5%;
        animation-duration: 11s;
        animation-delay: 2s;
        width: 2px;
        height: 2px;
    }
    .particle--6 {
        left: 58%;
        bottom: -5%;
        animation-duration: 13s;
        animation-delay: 4s;
        width: 3px;
        height: 3px;
    }
    .particle--7 {
        left: 68%;
        bottom: -5%;
        animation-duration: 16s;
        animation-delay: 1s;
        width: 2px;
        height: 2px;
    }
    .particle--8 {
        left: 78%;
        bottom: -5%;
        animation-duration: 12s;
        animation-delay: 3.5s;
        width: 3px;
        height: 3px;
    }
    .particle--9 {
        left: 88%;
        bottom: -5%;
        animation-duration: 14s;
        animation-delay: 2.5s;
        width: 2px;
        height: 2px;
    }
    .particle--10 {
        left: 13%;
        bottom: -5%;
        animation-duration: 11s;
        animation-delay: 5s;
        width: 4px;
        height: 4px;
    }
    .particle--11 {
        left: 33%;
        bottom: -5%;
        animation-duration: 13s;
        animation-delay: 6s;
        width: 2px;
        height: 2px;
    }
    .particle--12 {
        left: 53%;
        bottom: -5%;
        animation-duration: 15s;
        animation-delay: 1.2s;
        width: 3px;
        height: 3px;
    }
    .particle--13 {
        left: 73%;
        bottom: -5%;
        animation-duration: 10s;
        animation-delay: 4.5s;
        width: 2px;
        height: 2px;
    }
    .particle--14 {
        left: 93%;
        bottom: -5%;
        animation-duration: 12s;
        animation-delay: 0.8s;
        width: 3px;
        height: 3px;
    }
    .particle--15 {
        left: 43%;
        bottom: -5%;
        animation-duration: 16s;
        animation-delay: 7s;
        width: 2px;
        height: 2px;
    }

    @keyframes particleFloat {
        0% {
            transform: translateY(0) translateX(0);
            opacity: 0;
        }
        10% {
            opacity: 0.8;
        }
        50% {
            opacity: 0.4;
        }
        90% {
            opacity: 0.6;
        }
        100% {
            transform: translateY(-110vh) translateX(30px);
            opacity: 0;
        }
    }

    /* ─── Content ─── */
    .hero__content {
        position: relative;
        z-index: 2;
        display: flex;
        align-items: center;
        justify-content: center;
        padding-top: 72px; /* navbar offset */
    }

    .hero__card {
        position: relative;
        max-width: 680px;
        padding: clamp(2.5rem, 5vw, 4rem) clamp(2rem, 5vw, 4rem);
        text-align: center;
        animation: cardReveal 1.2s var(--ease-out-expo) both;
        animation-delay: 0.3s;
    }

    @keyframes cardReveal {
        from {
            opacity: 0;
            transform: translateY(40px) scale(0.96);
            backdrop-filter: blur(0);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
            backdrop-filter: blur(var(--glass-blur));
        }
    }

    /* Decorative gold lines */
    .hero__card-line {
        width: 60px;
        height: 1.5px;
        margin: 0 auto 2rem;
        background: linear-gradient(
            90deg,
            transparent,
            var(--gold-400),
            transparent
        );
        animation: lineExpand 1.5s var(--ease-out-expo) both;
        animation-delay: 0.8s;
    }

    .hero__card-line--bottom {
        margin: 2rem auto 0;
        animation-delay: 1s;
    }

    @keyframes lineExpand {
        from {
            width: 0;
            opacity: 0;
        }
        to {
            width: 60px;
            opacity: 1;
        }
    }

    /* Subtitle */
    .hero__subtitle {
        font-family: var(--font-body);
        font-size: clamp(0.65rem, 1.5vw, 0.8rem);
        font-weight: 500;
        letter-spacing: 0.3em;
        text-transform: uppercase;
        color: var(--gold-400);
        margin-bottom: 1.25rem;
        animation: fadeUp 1s var(--ease-out-expo) both;
        animation-delay: 0.6s;
    }

    /* Title */
    .hero__title {
        font-family: var(--font-display);
        font-size: clamp(2.2rem, 5.5vw, 3.8rem);
        font-weight: 600;
        line-height: 1.15;
        color: var(--white);
        margin-bottom: 1.5rem;
        animation: fadeUp 1s var(--ease-out-expo) both;
        animation-delay: 0.75s;
    }

    .hero__title-accent {
        background: linear-gradient(
            135deg,
            var(--gold-300) 0%,
            var(--gold-400) 40%,
            var(--gold-200) 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-style: italic;
    }

    /* Description */
    .hero__description {
        font-size: clamp(0.9rem, 1.8vw, 1.05rem);
        color: var(--gray-light);
        max-width: 520px;
        margin: 0 auto 2.25rem;
        line-height: 1.8;
        animation: fadeUp 1s var(--ease-out-expo) both;
        animation-delay: 0.9s;
    }

    /* Actions */
    .hero__actions {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
        animation: fadeUp 1s var(--ease-out-expo) both;
        animation-delay: 1.05s;
    }

    .hero__btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.9rem 2.25rem;
        font-size: 0.8rem;
        font-weight: 600;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        border-radius: 50px;
        transition: all var(--transition-base);
    }

    .hero__btn--primary {
        color: var(--black);
        background: linear-gradient(
            135deg,
            var(--gold-300) 0%,
            var(--gold-400) 100%
        );
        box-shadow: 0 4px 20px rgba(212, 175, 55, 0.25);
    }

    .hero__btn--primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 35px rgba(212, 175, 55, 0.4);
    }

    .hero__btn--primary svg {
        transition: transform var(--transition-base);
    }

    .hero__btn--primary:hover svg {
        transform: translateX(4px);
    }

    .hero__btn--secondary {
        color: var(--gold-300);
        background: rgba(212, 175, 55, 0.08);
        border: 1px solid rgba(212, 175, 55, 0.3);
        backdrop-filter: blur(8px);
    }

    .hero__btn--secondary:hover {
        background: rgba(212, 175, 55, 0.15);
        border-color: rgba(212, 175, 55, 0.5);
        transform: translateY(-2px);
    }

    @keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(25px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ─── Scroll Indicator ─── */
    .hero__scroll {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        z-index: 2;
        animation: fadeUp 1s var(--ease-out-expo) both;
        animation-delay: 1.5s;
    }

    .hero__scroll-text {
        font-size: 0.65rem;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: var(--gray);
    }

    .hero__scroll-line {
        width: 1px;
        height: 40px;
        background: rgba(212, 175, 55, 0.2);
        position: relative;
        overflow: hidden;
        border-radius: 1px;
    }

    .hero__scroll-dot {
        width: 3px;
        height: 8px;
        background: var(--gold-400);
        border-radius: 2px;
        position: absolute;
        left: -1px;
        animation: scrollDot 2s ease-in-out infinite;
    }

    @keyframes scrollDot {
        0% {
            top: -8px;
            opacity: 0;
        }
        30% {
            opacity: 1;
        }
        100% {
            top: 40px;
            opacity: 0;
        }
    }

    /* ─── Responsive ─── */
    @media (max-width: 640px) {
        .hero__card {
            padding: 2rem 1.5rem;
            border-radius: 12px;
        }

        .hero__actions {
            flex-direction: column;
            gap: 0.75rem;
        }

        .hero__btn {
            width: 100%;
            justify-content: center;
        }

        .hero__scroll {
            bottom: 1rem;
        }
    }
</style>
