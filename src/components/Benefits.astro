                    <h3 class="benefits__card-title">Privacidad Total</h3>
                    <p class="benefits__card-text">
                        Tu identidad 100% protegida
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .benefits {
        padding: var(--section-padding) 0;
        position: relative;
    }

    .benefits__header {
        text-align: center;
        margin-bottom: clamp(2.5rem, 5vw, 4rem);
    }

    .benefits__label {
        font-size: 0.75rem;
        font-weight: 500;
        letter-spacing: 0.25em;
        text-transform: uppercase;
        color: var(--gold-400);
        margin-bottom: 1rem;
    }

    .benefits__title {
        font-family: var(--font-display);
        font-size: clamp(1.8rem, 4vw, 2.8rem);
        font-weight: 600;
        color: var(--white);
        line-height: 1.2;
    }

    /* Grid */
    .benefits__grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.25rem;
    }

    /* Card */
    .benefits__card {
        position: relative;
        border-radius: 20px;
        overflow: hidden;
        cursor: pointer;
        aspect-ratio: 4 / 3;
    }

    .benefits__card--large {
        grid-column: span 2;
        aspect-ratio: 21 / 9;
    }

    .benefits__card img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 1.2s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .benefits__card:hover img {
        transform: scale(1.08);
    }

    /* Fog effect */
    .benefits__card-fog {
        position: absolute;
        inset: 0;
        background:
            radial-gradient(
                ellipse 100% 80% at 50% 100%,
                rgba(10, 10, 10, 0.8) 0%,
                transparent 60%
            ),
            radial-gradient(
                ellipse 60% 40% at 20% 80%,
                rgba(212, 175, 55, 0.08) 0%,
                transparent 50%
            );
        pointer-events: none;
        opacity: 0.8;
        transition: opacity 0.8s ease;
    }

    .benefits__card:hover .benefits__card-fog {
        opacity: 1;
    }

    /* Dark overlay gradient */
    .benefits__card-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            0deg,
            rgba(10, 10, 10, 0.85) 0%,
            rgba(10, 10, 10, 0.2) 40%,
            transparent 70%
        );
        pointer-events: none;
        transition: background 0.8s ease;
    }

    .benefits__card:hover .benefits__card-overlay {
        background: linear-gradient(
            0deg,
            rgba(10, 10, 10, 0.9) 0%,
            rgba(10, 10, 10, 0.3) 50%,
            transparent 80%
        );
    }

    /* Border */
    .benefits__card-border {
        position: absolute;
        inset: 0;
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        pointer-events: none;
        transition: border-color 0.6s ease;
    }

    .benefits__card:hover .benefits__card-border {
        border-color: rgba(255, 255, 255, 0.25);
    }

    /* Content */
    .benefits__card-content {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 1.75rem;
        z-index: 1;
        transform: translateY(8px);
        transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .benefits__card:hover .benefits__card-content {
        transform: translateY(0);
    }

    .benefits__card-icon {
        width: 42px;
        height: 42px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        background: rgba(212, 175, 55, 0.12);
        border: 1px solid rgba(212, 175, 55, 0.2);
        color: var(--gold-300);
        margin-bottom: 0.75rem;
        backdrop-filter: blur(8px);
        transition: all 0.6s ease;
    }

    .benefits__card:hover .benefits__card-icon {
        background: rgba(212, 175, 55, 0.2);
        box-shadow: 0 0 25px rgba(212, 175, 55, 0.15);
    }

    .benefits__card-title {
        font-family: var(--font-display);
        font-size: 1.15rem;
        font-weight: 600;
        color: var(--white);
        margin-bottom: 0.3rem;
    }

    .benefits__card-text {
        font-size: 0.82rem;
        color: var(--silver-200);
        font-weight: 300;
        letter-spacing: 0.02em;
    }

    /* Responsive */
    @media (max-width: 700px) {
        .benefits__grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
        .benefits__card {
            aspect-ratio: 16 / 10;
        }
        .benefits__card--large {
            grid-column: 1;
            aspect-ratio: 16 / 10;
        }
        .benefits__card-content {
            padding: 1.25rem;
        }
        .benefits__card-title {
            font-size: 1.05rem;
        }
    }
</style>
