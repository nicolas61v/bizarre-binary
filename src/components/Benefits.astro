---
/* Benefits — Photo cards with text overlay, less text, more visual impact */
import { createReader } from "@keystatic/core/reader";
import keystaticConfig from "../../keystatic.config";

const reader = createReader(process.cwd(), keystaticConfig);
const benefits = await reader.collections.benefits.all();

const defaultBenefits = [
    {
        title: "Máximos Ingresos",
        description: "Gana hasta 3x más que el promedio",
        image: "https://images.unsplash.com/photo-1560066984-138dadb4c035?w=800&h=500&fit=crop",
        icon: "money",
    },
    {
        title: "Tu Imagen",
        description: "Asesoría profesional de belleza",
        image: "https://images.unsplash.com/photo-1522335789203-aabd1fc54bc9?w=500&h=400&fit=crop",
        icon: "user",
    },
    {
        title: "Equipos Pro",
        description: "Cámaras HD y sets exclusivos",
        image: "https://images.unsplash.com/photo-1593062096033-9a26b09da705?w=500&h=400&fit=crop",
        icon: "camera",
    },
    {
        title: "Soporte 24/7",
        description: "Coaches y equipo dedicado",
        image: "https://images.unsplash.com/photo-1521737711867-e3b97375f902?w=500&h=400&fit=crop",
        icon: "support",
    },
    {
        title: "Transparencia",
        description: "Reportes claros de tus ingresos",
        image: "https://images.unsplash.com/photo-1554224155-6726b3ff858f?w=500&h=400&fit=crop",
        icon: "eye",
    },
    {
        title: "Privacidad Total",
        description: "Tu identidad 100% protegida",
        image: "https://images.unsplash.com/photo-1596495577886-d920f1fb7238?w=800&h=500&fit=crop",
        icon: "lock",
    },
];

const items =
    benefits.length > 0
        ? benefits.map((item) => ({
              title: item.entry.title,
              description: item.entry.description,
              image: item.entry.image,
              icon: item.entry.icon,
          }))
        : defaultBenefits;

// Icon mapping
const iconPath = {
    money: "M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z",
    user: "M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z",
    camera: "rect:2,3,20,14,2,2|line:8,21,16,21|line:12,17,12,21", // Special handling needed for composite
    support:
        "path:M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2|circle:9,7,4|path:M23 21v-2a4 4 0 0 0-3-3.87|path:M16 3.13a4 4 0 0 1 0 7.75",
    eye: "polyline:22 12 18 12 15 21 9 3 6 12 2 12",
    lock: "path:M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z",
    star: "M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z",
};

/* Helper to render SVG paths/shapes based on simple string encoding I created above */
/* Actually, simpler way: I'll just put the full SVG content in a switch/case in the HTML */
---

<section class="benefits" id="servicios">
    <div class="benefits__inner container">
        <div class="benefits__header reveal">
            <p class="benefits__label">¿Por qué elegirnos?</p>
            <h2 class="benefits__title">
                Lo que nos hace <span class="gold-gradient-text"
                    >diferentes</span
                >
            </h2>
        </div>

        <div class="benefits__grid">
            {
                items.map((item, index) => (
                    <div
                        class={`benefits__card ${index % 5 === 0 ? "benefits__card--large" : ""} reveal-scale`}
                        data-delay={index}
                    >
                        <img src={item.image} alt={item.title} loading="lazy" />
                        <div class="benefits__card-fog" />
                        <div class="benefits__card-overlay" />
                        <div class="benefits__card-border" />
                        <div class="benefits__card-content">
                            <div class="benefits__card-icon">
                                <svg
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="1.5"
                                >
                                    {item.icon === "money" && (
                                        <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" />
                                    )}
                                    {item.icon === "user" && (
                                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
                                    )}
                                    {item.icon === "camera" && (
                                        <>
                                            <rect
                                                x="2"
                                                y="3"
                                                width="20"
                                                height="14"
                                                rx="2"
                                                ry="2"
                                            />
                                            <line
                                                x1="8"
                                                y1="21"
                                                x2="16"
                                                y2="21"
                                            />
                                            <line
                                                x1="12"
                                                y1="17"
                                                x2="12"
                                                y2="21"
                                            />
                                        </>
                                    )}
                                    {item.icon === "support" && (
                                        <>
                                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                                            <circle cx="9" cy="7" r="4" />
                                            <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                                            <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                                        </>
                                    )}
                                    {item.icon === "eye" && (
                                        <polyline points="22 12 18 12 15 21 9 3 6 12 2 12" />
                                    )}
                                    {item.icon === "lock" && (
                                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
                                    )}
                                    {(item.icon === "star" || !item.icon) && (
                                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                                    )}
                                </svg>
                            </div>
                            <h3 class="benefits__card-title">{item.title}</h3>
                            <p class="benefits__card-text">
                                {item.description}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<script>
    // Mobile auto-reveal text when in center of viewport
    document.addEventListener("DOMContentLoaded", () => {
        const cards = document.querySelectorAll(".benefits__card");

        if ("IntersectionObserver" in window) {
            const observer = new IntersectionObserver(
                (entries) => {
                    entries.forEach((entry) => {
                        if (entry.isIntersecting) {
                            entry.target.classList.add(
                                "benefits__card--active",
                            );
                        } else {
                            entry.target.classList.remove(
                                "benefits__card--active",
                            );
                        }
                    });
                },
                {
                    root: null,
                    threshold: 0.6, // Trigger when 60% visible
                    rootMargin: "-10% 0px -10% 0px", // Focus on the middle of screen
                },
            );

            cards.forEach((card) => observer.observe(card));
        }
    });
</script>

<style>
    .benefits {
        padding: var(--section-padding) 0;
        position: relative;
    }

    .benefits__header {
        text-align: center;
        margin-bottom: clamp(2.5rem, 5vw, 4rem);
    }

    .benefits__label {
        font-size: 0.75rem;
        font-weight: 500;
        letter-spacing: 0.25em;
        text-transform: uppercase;
        color: var(--gold-400);
        margin-bottom: 1rem;
    }

    .benefits__title {
        font-family: var(--font-display);
        font-size: clamp(1.8rem, 4vw, 2.8rem);
        font-weight: 600;
        color: var(--white);
        line-height: 1.2;
    }

    /* Grid */
    .benefits__grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    /* Card */
    .benefits__card {
        position: relative;
        border-radius: 24px; /* More rounded as requested */
        overflow: hidden;
        cursor: pointer;
        aspect-ratio: 4 / 3;
        isolation: isolate;
    }

    .benefits__card--large {
        grid-column: span 2;
        aspect-ratio: 21 / 9;
    }

    .benefits__card img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 1.8s cubic-bezier(0.19, 1, 0.22, 1); /* SLOWER animation */
    }

    /* Zoom on active/hover */
    .benefits__card:hover img,
    .benefits__card.benefits__card--active img {
        transform: scale(1.12);
    }

    /* Fog effect */
    .benefits__card-fog {
        position: absolute;
        inset: 0;
        background:
            radial-gradient(
                ellipse 100% 80% at 50% 100%,
                rgba(10, 10, 10, 0.9) 0%,
                transparent 70%
            ),
            radial-gradient(
                ellipse 60% 40% at 20% 80%,
                rgba(212, 175, 55, 0.15) 0%,
                transparent 50%
            );
        pointer-events: none;
        opacity: 0.6;
        transition: opacity 1.5s ease;
    }

    .benefits__card:hover .benefits__card-fog,
    .benefits__card.benefits__card--active .benefits__card-fog {
        opacity: 1;
    }

    /* Dark overlay gradient */
    .benefits__card-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            0deg,
            rgba(10, 10, 10, 0.95) 0%,
            rgba(10, 10, 10, 0.5) 40%,
            transparent 80%
        );
        pointer-events: none;
        opacity: 0.6;
        transition:
            opacity 1s ease,
            background 1s ease;
    }

    .benefits__card:hover .benefits__card-overlay,
    .benefits__card.benefits__card--active .benefits__card-overlay {
        opacity: 1;
        background: linear-gradient(
            0deg,
            rgba(10, 10, 10, 0.95) 10%,
            rgba(10, 10, 10, 0.6) 50%,
            transparent 90%
        );
    }

    /* Border */
    .benefits__card-border {
        position: absolute;
        inset: 0;
        border-radius: 24px;
        border: 1px solid rgba(255, 255, 255, 0.15);
        pointer-events: none;
        transition: border-color 1s ease;
        z-index: 2;
    }

    .benefits__card:hover .benefits__card-border,
    .benefits__card.benefits__card--active .benefits__card-border {
        border-color: rgba(255, 255, 255, 0.4);
    }

    /* Content - HIDDEN INITIALLY */
    .benefits__card-content {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 2.5rem;
        z-index: 3;
        transform: translateY(20px);
        opacity: 0;
        transition:
            transform 1.2s cubic-bezier(0.19, 1, 0.22, 1),
            opacity 1.2s cubic-bezier(0.19, 1, 0.22, 1);
    }

    /* Reveal on hover/active */
    .benefits__card:hover .benefits__card-content,
    .benefits__card.benefits__card--active .benefits__card-content {
        transform: translateY(0);
        opacity: 1;
    }

    .benefits__card-icon {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        background: rgba(212, 175, 55, 0.1);
        border: 1px solid rgba(212, 175, 55, 0.3);
        color: var(--gold-300);
        margin-bottom: 1rem;
        backdrop-filter: blur(8px);
        transition: all 1s ease;
    }

    .benefits__card:hover .benefits__card-icon,
    .benefits__card.benefits__card--active .benefits__card-icon {
        background: rgba(212, 175, 55, 0.25);
        box-shadow: 0 0 30px rgba(212, 175, 55, 0.2);
        border-color: var(--gold-400);
    }

    .benefits__card-title {
        font-family: var(--font-display);
        font-size: 1.4rem;
        font-weight: 600;
        color: var(--white);
        margin-bottom: 0.5rem;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
    }

    .benefits__card-text {
        font-size: 0.95rem;
        color: var(--silver-100);
        font-weight: 300;
        letter-spacing: 0.02em;
        line-height: 1.6;
        max-width: 90%;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8);
    }

    /* Responsive */
    @media (max-width: 900px) {
        .benefits__grid {
            gap: 1rem;
        }
        .benefits__card-content {
            padding: 1.5rem;
        }
    }

    @media (max-width: 700px) {
        .benefits__grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
        .benefits__card {
            aspect-ratio: 16 / 12; /* Slightly taller on mobile */
        }
        .benefits__card--large {
            grid-column: 1;
            aspect-ratio: 16 / 12;
        }

        /* On mobile, standard state might be slightly visible or fully handled by JS */
        .benefits__card-content {
            padding: 1.5rem;
            /* On very small screens, maybe show a hint? 
         But JS will handle the full reveal. */
        }

        .benefits__card-title {
            font-size: 1.2rem;
        }
    }
</style>
