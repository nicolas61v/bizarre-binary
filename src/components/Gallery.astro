---
/* Gallery — Model showcase with placeholder images */
import { createReader } from "@keystatic/core/reader";
import keystaticConfig from "../../keystatic.config";

const reader = createReader(process.cwd(), keystaticConfig);
const gallery = await reader.collections.gallery.all();

// Fallback data if CMS is empty
const defaultGallery = [
    {
        name: "Modelo Dejavu",
        tag: "Top Model",
        image: "https://images.unsplash.com/photo-1524504388940-b1c1722653e1?w=400&h=600&fit=crop&crop=face",
    },
    {
        name: "Modelo Dejavu",
        tag: "Rising Star",
        image: "https://images.unsplash.com/photo-1517841905240-472988babdf9?w=400&h=400&fit=crop&crop=face",
    },
    {
        name: "Modelo Dejavu",
        tag: "Elite",
        image: "https://images.unsplash.com/photo-1539571696357-5a69c17a67c6?w=400&h=400&fit=crop&crop=face",
    },
    {
        name: "Modelo Dejavu",
        tag: "Premium",
        image: "https://images.unsplash.com/photo-1529626455594-4ff0802cfb7e?w=400&h=600&fit=crop&crop=face",
    },
    {
        name: "Modelo Dejavu",
        tag: "New",
        image: "https://images.unsplash.com/photo-1488426862026-3ee34a7d66df?w=400&h=400&fit=crop&crop=face",
    },
    {
        name: "Modelo Dejavu",
        tag: "Featured",
        image: "https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=400&h=400&fit=crop&crop=face",
    },
];

const cmsItems = gallery.map((item) => ({
    name: item.entry.name,
    tag: item.entry.tag,
    image: item.entry.image,
}));

// Si hay fotos del CMS, rellenar con fallbacks hasta tener al menos 4
const items = cmsItems.length > 0
    ? cmsItems.length >= 4
        ? cmsItems
        : [...cmsItems, ...defaultGallery.slice(0, Math.max(4 - cmsItems.length, 0))]
    : defaultGallery;

// Adaptar columnas según cantidad de items
const colCount = items.length <= 2 ? items.length : items.length === 3 ? 3 : 4;
---

<section class="gallery" id="modelos">
    <div class="gallery__inner container">
        <div class="gallery__header reveal">
            <p class="gallery__label">Nuestras modelos</p>
            <h2 class="gallery__title">
                Belleza que <span class="gold-gradient-text">inspira</span>
            </h2>
            <p class="gallery__subtitle">
                Cada modelo es única. Nosotros potenciamos lo que ya llevas
                dentro.
            </p>
        </div>

        <div class="gallery__grid" style={`--col-count: ${colCount};`}>
            {
                items.map((item, index) => (
                    <div
                        class={`gallery__item ${index % 3 === 0 && items.length > 2 ? "gallery__item--tall" : ""} reveal-scale`}
                        data-delay={index}
                    >
                        <img
                            src={item.image}
                            alt={item.name}
                            loading="lazy"
                        />
                        <div class="gallery__item-overlay">
                            <span class="gallery__item-tag">
                                {item.tag}
                            </span>
                        </div>
                        <div class="gallery__item-border" />
                    </div>
                ))
            }
        </div>
    </div>

    <style>
        .gallery {
            padding: var(--section-padding) 0;
            position: relative;
        }

        /* Background accent */
        .gallery::before {
            content: "";
            position: absolute;
            top: 30%;
            left: -10%;
            width: 500px;
            height: 500px;
            border-radius: 50%;
            background: radial-gradient(
                circle,
                rgba(212, 175, 55, 0.04) 0%,
                transparent 70%
            );
            filter: blur(80px);
            pointer-events: none;
        }

        .gallery__header {
            text-align: center;
            margin-bottom: clamp(3rem, 6vw, 5rem);
        }

        .gallery__label {
            font-size: 0.75rem;
            font-weight: 500;
            letter-spacing: 0.25em;
            text-transform: uppercase;
            color: var(--gold-400);
            margin-bottom: 1rem;
        }

        .gallery__title {
            font-family: var(--font-display);
            font-size: clamp(1.8rem, 4vw, 2.8rem);
            font-weight: 600;
            color: var(--white);
            line-height: 1.2;
            margin-bottom: 1rem;
        }

        .gallery__subtitle {
            font-size: 0.95rem;
            color: var(--silver-300);
            font-weight: 300;
            max-width: 400px;
            margin: 0 auto;
        }

        /* Masonry-like grid */
        .gallery__grid {
            display: grid;
            grid-template-columns: repeat(var(--col-count, 4), 1fr);
            grid-auto-rows: 200px;
            gap: 1.25rem;
        }

        .gallery__item {
            position: relative;
            border-radius: 20px; /* Increased from 16px */
            overflow: hidden;
            cursor: pointer;
        }

        .gallery__item--tall {
            grid-row: span 2;
        }

        .gallery__item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 1.4s cubic-bezier(0.19, 1, 0.22, 1); /* Slower animation */
        }

        .gallery__item:hover img {
            transform: scale(1.1);
        }

        .gallery__item-overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(
                180deg,
                transparent 50%,
                rgba(10, 10, 10, 0.8) 100%
            );
            display: flex;
            align-items: flex-end;
            padding: 1.25rem;
            opacity: 0;
            transition: opacity 0.8s ease; /* Slower fade */
        }

        .gallery__item:hover .gallery__item-overlay {
            opacity: 1;
        }

        .gallery__item-tag {
            font-size: 0.7rem;
            font-weight: 600;
            letter-spacing: 0.15em;
            text-transform: uppercase;
            color: var(--gold-300);
            background: rgba(10, 10, 10, 0.5);
            backdrop-filter: blur(10px);
            padding: 0.4rem 1rem;
            border-radius: 50px;
            border: 1px solid rgba(212, 175, 55, 0.25);
        }

        .gallery__item-border {
            position: absolute;
            inset: 0;
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            pointer-events: none;
            transition: border-color 0.8s ease;
        }

        .gallery__item:hover .gallery__item-border {
            border-color: rgba(255, 255, 255, 0.3);
        }

        /* Responsive */
        @media (max-width: 900px) {
            .gallery__grid {
                grid-template-columns: repeat(2, 1fr);
                grid-auto-rows: 220px;
            }
        }

        @media (max-width: 500px) {
            .gallery__grid {
                grid-template-columns: 1fr 1fr;
                grid-auto-rows: 180px;
                gap: 0.75rem;
            }
            /* Mobile adjustment for overlay visibility if desired, 
           but user didn't explicitly ask for this one to be auto-revealed, 
           only Benefits. Keeping hover for now or it's fine. */
        }
    </style>
</section>
